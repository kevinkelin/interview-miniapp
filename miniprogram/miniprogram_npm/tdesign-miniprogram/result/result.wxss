.t-float-left {
  float: left;
}
.t-float-right {
  float: right;
}
@keyframes tdesign-fade-out {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}
.hotspot-expanded.relative {
  position: relative;
}
.hotspot-expanded::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  transform: scale(1.5);
}
.t-result {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.t-result__title {
  line-height: var(--td-result-title-line-height, 56rpx);
  font-size: var(--td-result-title-font-size, 40rpx);
  font-weight: 700;
  color: var(--td-result-title-color, rgba(0, 0, 0, 0.9));
}
.t-result__thumb + .t-result__title:not(:empty) {
  margin-top: var(--td-result-title-margin-top, 16rpx);
}
.t-result__description {
  text-align: center;
  color: var(--td-result-description-color, var(--td-font-gray-2, rgba(0, 0, 0, 0.6)));
  font-size: var(--td-result-description-font-size, 28rpx);
  line-height: var(--td-result-description-line-height, 44rpx);
}
.t-result__title + .t-result__description:not(:empty) {
  margin-top: var(--td-result-description-margin-top, 24rpx);
}
.t-result--theme-default {
  color: var(--td-result-icon-default-color, #0052d9);
}
.t-result--theme-success {
  color: var(--ts-result-icon-success-color, #00a870);
}
.t-result--theme-warning {
  color: var(--ts-result-icon-warning-color, #ed7b2f);
}
.t-result--theme-error {
  color: var(--td-result-icon-error-color, #e34d59);
}
