.t-float-left {
  float: left;
}
.t-float-right {
  float: right;
}
@keyframes tdesign-fade-out {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}
.hotspot-expanded.relative {
  position: relative;
}
.hotspot-expanded::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  transform: scale(1.5);
}
.t-avatar {
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  background-color: var(--td-avatar-bg-color, #d4e3fc);
  color: var(--td-avatar-content-color, #0052d9);
}
.t-avatar.t-size-l {
  width: var(--td-avatar-large-width, 128rpx);
  height: var(--td-avatar-large-width, 128rpx);
  font-size: var(--td-avatar-text-large-font-size, 16px);
}
.t-avatar.t-size-l .t-avatar__icon {
  font-size: var(--td-avatar-icon-large-font-size, 64rpx);
}
.t-avatar.t-size-m {
  width: var(--td-avatar-medium-width, 96rpx);
  height: var(--td-avatar-medium-width, 96rpx);
  font-size: var(--td-avatar-text-medium-font-size, 28rpx);
}
.t-avatar.t-size-m .t-avatar__icon {
  font-size: var(--ts-avatar-icon-medium-font-size, 48rpx);
}
.t-avatar.t-size-s {
  width: var(--td-avatar-small-width, 80rpx);
  height: var(--td-avatar-small-width, 80rpx);
  font-size: var(--td-avatar-text-small-font-size, 24rpx);
}
.t-avatar.t-size-s .t-avatar__icon {
  font-size: var(--td-avatar-icon-small-font-size, 40rpx);
}
.t-avatar .t-image,
.t-avatar__image {
  width: 100%;
  height: 100%;
}
.t-avatar--circle {
  border-radius: var(--td-avatar-circle-border-radius, 50%);
  overflow: hidden;
}
.t-avatar--round {
  border-radius: var(--td-avatar-round-border-radius, 12rpx);
  overflow: hidden;
}
.t-avatar__text,
.t-avatar__icon {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.t-avatar__text:empty,
.t-avatar__icon:empty {
  width: 0;
  height: 0;
}
.t-avatar--border {
  border-color: var(--td-avatar-border-color, #fff);
  border-style: solid;
}
.t-avatar--border--small {
  border-width: var(--td-avatar-border-width-small, 4rpx);
}
.t-avatar--border--medium {
  border-width: var(--td-avatar-border-width-medium, 6rpx);
}
.t-avatar--border--large {
  border-width: var(--td-avatar-border-width-large, 8rpx);
}
