.t-float-left {
  float: left;
}
.t-float-right {
  float: right;
}
@keyframes tdesign-fade-out {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}
.hotspot-expanded.relative {
  position: relative;
}
.hotspot-expanded::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  transform: scale(1.5);
}
.t-footer {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}
.t-footer__copyright-info {
  font-size: var(--td-footer-copyright-font-size, 24rpx);
  line-height: var(--td-footer-copyright-line-height, 40rpx);
  color: var(--td-footer-copyright-color, rgba(0, 0, 0, 0.4));
}
.t-footer__link-list {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: var(--td-footer-link-margin-bottom, 8rpx);
}
.t-footer__link-item {
  color: var(--td-footer-link-color, #0052d9);
  font-size: var(--td-footer-link-font-size, 24rpx);
  line-height: var(--td-footer-link-line-height, 40rpx);
  text-decoration: underline;
}
.t-footer__link-item:not(:last-child)::after {
  content: '|';
  color: var(--td-footer-link-dividing-line-color, rgba(0, 0, 0, 0.4));
  display: inline-block;
  padding: 0 var(--td-footer-link-dividing-line-padding, 24rpx);
}
.t-footer__logo {
  display: flex;
  justify-content: center;
  align-items: center;
}
.t-footer__icon {
  width: var(--td-footer-logo-icon-width, 48rpx);
  height: var(--td-footer-logo-icon-height, 48rpx);
  margin-right: var(--td-footer-logo-icon-margin-right, 16rpx);
}
.t-footer__title {
  font-weight: bold;
  font-size: var(--td-footer-logo-title-font-size, 32rpx);
  line-height: var(--td-footer-logo-title-line-height, 48rpx);
  font-style: italic;
}
.t-footer__title-url {
  width: var(--td-footer-logo-title-url-width, 256rpx);
}
